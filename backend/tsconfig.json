{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "plugins": [
      {
        "name": "typescript-transform-paths"
      }
    ]
  },
  "include": ["src/**/*", "tests/**/*", "cli/**/*"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
